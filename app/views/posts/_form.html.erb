<%= form_for @post, class:"form-horitzontal" do |f| %>
  <div class="form-group">
    <%= f.label :date, class: "col-sm-2 control-label" %>
    <%= f.date_field :date, class: "form-control" %> <br>
  </div>
  <div class="form-group">
    <%= f.label :rationale, class: "col-sm-2 control-label" %>
    <%= f.text_area :rationale, class: "form-control" %> <br>
  </div>

  <%= f.submit 'Save', class: "btn btn-primary btn-block" %>

<% end %>
